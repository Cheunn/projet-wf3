{% extends "layout.html.twig" %}

{% block content %}
    <h1>{% if annonce.id_post %}Modification{% else %}Création{% endif %} annonce</h1>
    <form method="post">
        <div class="form-group">
            <label>Titre</label>
            <input type="text" name="post_title" class="form-control" value="{{ annonce.post_title }}">
        </div>
        <div class="form-group">
            <label>paragraphe 1</label>
            <textarea name="paragraphe_1" class="form-control">{{ annonce.paragraphe_1 }}</textarea>
            <label>paragraphe 2</label>
            <textarea name="paragraphe_2" class="form-control">{{ annonce.paragraphe_2 }}</textarea>
        </div>
        <div class="form-group">
            <label>Image</label>
            <input type="text" name="url_img_1" class="form-control" value="{{ annonce.url_img_1 }}">
            <input type="text" name="url_img_2" class="form-control" value="{{ annonce.url_img_2 }}">
            <input type="text" name="url_img_3" class="form-control" value="{{ annonce.url_img_3 }}">
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="text" name="post_date" class="form-control" value="{{ annonce.post_date }}">
        </div>
        <div class="form-group">
            <label>Catégorie</label>
            <select name="category" class="form-control">
                <option value="">Choisissez une catégorie</option>
                {% for category in categories %}
                    <option 
                        value="{{ category.id_category }}"
                        {% if category.id_category == annonce.category_id_category %}selected{% endif %}>
                        {{ category.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <select name="type_id_type" class="form-control">
                <option value="1">Don</option>
                <option value="2">Vente</option>
                <option value="3">Echange</option>
                <option value="4">Recherche</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('user_annonce_list') }}" class="btn btn-default">Annuler</a>
        <br><br>
    </form>
{% endblock %}
