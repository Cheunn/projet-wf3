{% for chroniqueUser in chroniquesUser %}    
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <article class="post">
            <div class="post-type post-img"> <a href="{{ path('single_chronique', {id: chroniqueUser.id_post}) }}"><img src="{{ asset ('assets/images/post/post-1.jpg') }}" class="img-responsive" alt="image post" /></a> </div>
            <div class="author-info author-info-2">
                <ul class="list-inline">
                    <li>
                        <div class="info">
                            <p>Posted by:</p>
                            <a href="author.html">Waqas Hussain</a> </div>
                    </li>
                    <li>
                        <div class="info">
                            <p>Posted on:</p>
                            <strong>{{ chroniqueUser.post_date }}</strong>
                        </div>
                    </li>
                </ul>
            </div>
        <div class="caption">
            <h3 class="md-heading"><a href="{{ path('single_chronique', {id: chroniqueUser.id_post}) }}">{{ chroniqueUser.post_title }}</a></h3>
            <p> {{ chroniqueUser.paragraph_1 }} </p>
            <a class="btn btn-default" href="{{ path('single_chronique', {id: chroniqueUser.id_post}) }}" role="button">Read More</a> 
        </div>
        </article>
    </div>
{% endfor %}