{% extends "layout.html.twig" %}

{% block content %}
    <h1>Articles</h1>
    
    <p><a href="{{ path('admin_article_edit') }}">Ajouter un article</a></p>
    
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Rubrique</th>
            <th>Auteur</th>
            <th width="200px"></th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>{# en php : $article->getId() #}
                <td>{{ article.title }}</td>
                <td>{{ article.categoryName }}</td>
                <td>{{ article.authorName }}</td>
                <td>
                    <a href="{{ path('admin_article_edit', {id: article.id}) }}" class="btn btn-primary">
                        Modifier
                    </a>
                    <a href="{{ path('admin_article_delete', {id: article.id}) }}" class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5" style="text-align: center">Aucun r√©sultat</td></tr>
        {% endfor %}
    </table>
{% endblock %}
