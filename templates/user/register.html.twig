                                {
                                        $('input[name="postal_code"]').val('CP INEXISTANT')
                                        $('input[name="postal_code"]').css('color','red')
                                } 
                                else $('input[name="town"]').val(data.VILLE)


                        })

                        .fail(function( jqXHR, textStatus )
                        {
                                console.log( "Request failed: " + textStatus );
                        });
                    }
	</script>
{% endblock %}